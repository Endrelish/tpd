<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:View.Controls"
        xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
        Title="MainWindow" Height="750" Width="1250">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <Grid Margin=" 10 10 10 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" BorderThickness="1" BorderBrush="LightGray" Margin="5,5,5,5">
            <controls:CriterionPicker DataContext="{Binding CriterionPickerViewModel}" />
        </Border>
        <Border Grid.Column ="1" BorderThickness="1" BorderBrush="LightGray" Margin="5,5,5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <controls:Input Grid.Row="0" DataContext="{Binding InputViewModel}"/>
            </Grid>
        </Border>
    </Grid>
</Window>